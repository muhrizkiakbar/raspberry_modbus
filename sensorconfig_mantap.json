{
  "serial_ports": {
    "/dev/ttyUSB0": {
      "baudrate": 9600,
      "bytesize": 8,
      "parity": "N",
      "stopbits": 1,
      "description": "Analog Converter 1 (4-20mA/0-5V)"
    },
    "/dev/ttyUSB1": {
      "baudrate": 4800,
      "bytesize": 8,
      "parity": "N",
      "stopbits": 1,
      "description": "Radar Flow Meter Connection"
    }
  },
  "mqtt": {
    "broker": "eqmx.telemetry-adaro.id",
    "port": 1883,
    "base_topic": "adaro/8",
    "command_topic": "adaro/8/command",
    "qos": 1,
    "client_id": "industrial_gateway"
  },
  "devices": [
    {
      "name": "Wellpro",
      "port": "/dev/ttyUSB0",
      "type": "analog_io",
      "sensors": [
        {
          "name": "ph",
          "type": "4-20mA",
          "slave_address": 1,
          "conversion": {
            "input_min": 4,
            "input_max": 20,
            "output_min": 0,
            "output_max": 14,
            "unit": ""
          },
          "channel": 0
        },
        {
          "name": "tds",
          "type": "4-20mA",
          "slave_address": 1,
          "conversion": {
            "input_min": 4,
            "input_max": 20,
            "output_min": 0,
            "output_max": 3000,
            "unit": "ppm"
          },
          "channel": 1
        }
      ]
    },
    {
      "name": "FlowMeter",
      "port": "/dev/ttyUSB1",
      "type": "direct_rs485",
      "sensors": [
        {
          "name": "debit",
          "type": "rs485",
          "slave_address": 1,
          "conversion": {
            "register_type": "16bit_int",
            "scaling_factor": 0.001,
            "unit": "m³/s"
          },
          "register_address": 1002
        },
        {
          "name": "water_height",
          "type": "rs485",
          "slave_address": 1,
          "conversion": {
            "register_type": "16bit_int",
            "scaling_factor": 1,
            "unit": "mm"
          },
          "register_address": 1003
        },
        {
          "name": "Velocity",
          "type": "rs485",
          "slave_address": 1,
          "conversion": {
            "register_type": "16bit_int",
            "scaling_factor": 0.01,
            "unit": "m/s"
          },
          "register_address": 1004
        },
        {
          "name": "water_volume",
          "type": "rs485",
          "slave_address": 1,
          "conversion": {
            "register_type": "32bit_int",
            "scaling_factor": 1,
            "unit": "m³"
          },
          "register_address": 1000
        }
      ],
      "section_parameters": {
        "section_type": 1,
        "size1": 2600,
        "size2": 1000,
        "size3": 7000,
        "height_sensor": 1400
      }
    }
  ]
}
